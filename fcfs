
    #include <bits/stdc++.h>
using namespace std;
int main()
{
    //fcfs
    int n;
    cout << "The total processes: ";
    cin >> n;
    int p[100], at[100], bt[100],et[100], tat[100], wt[100];
    cout << "Enter Arrival time and Burst time:\n";
    for (int i = 0; i < n; i++)
    {
        p[i] = i + 1;
        cin >> at[i] >> bt[i];
    }
    for (int i = 0; i < n - 1; i++)
    {
        for (int j = 0; j < n - i - 1; j++)
        {
            if (at[j] > at[j + 1])
            {
                int temp = at[j];
                at[j] = at[j + 1];
                at[j + 1] = temp;

                temp = bt[j];
                bt[j] = bt[j + 1];
                bt[j + 1] = temp;

                temp = p[j];
                p[j] = p[j + 1];
                p[j + 1] = temp;
            }
        }
    }

    for (int i = 0; i < n; i++)
    {
        if (i == 0)
        {
            et[0] = at[0] + bt[0];
        }
        else
        {
            if (et[i - 1] < at[i])
            {
                et[i] = et[i - 1] + (at[i] - et[i - 1]) + bt[i];
                tat[i] = et[i] - at[i];
            }
            else
            {
                et[i] = et[i - 1] + bt[i];
                tat[i] = et[i] - at[i];
            }
        }
    }
    int totalWT = 0;
    for (int i = 0; i < n; i++)
    {
        tat[i] = et[i] - at[i];
        wt[i] = tat[i] - bt[i];
        totalWT += wt[i];
    }
    cout << "\nP\tAT\tBT\tTAT\tWT\n";
    for (int i = 0; i < n; i++)
    {
        cout << "P" << p[i] << "\t" << at[i] << "\t" << bt[i] << "\t" << tat[i] << "\t" << wt[i] << "\n";
    }
    cout << "AVG> waiting time = " << (float)totalWT / n << endl;




   
  
    return 0;
}
